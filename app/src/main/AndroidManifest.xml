<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.all4.snapkit">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SnapKit">

        <meta-data android:name="com.snapchat.kit.sdk.clientId" android:value="XXXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXX" />
        <meta-data android:name="com.snapchat.kit.sdk.redirectUrl" android:value="all4dev://snap-kit/oauth2" />
        <meta-data android:name="com.snapchat.kit.sdk.scopes" android:resource="@array/snap_connect_scopes" />

        <activity
            android:name="dev.all4.snapkit.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.snapchat.kit.sdk.SnapKitActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="all4dev"
                      android:host="snap-kit"
                      android:path="/oauth2"/>

            </intent-filter>
        </activity>
    </application>

</manifest>